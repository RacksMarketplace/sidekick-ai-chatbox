{
  "name": "sidekick-ai",
  "version": "0.1.0",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "npm --prefix renderer install",
    "dev:renderer": "cd renderer && npm run dev",
    "build:main": "tsc -p tsconfig.node.json",
    "dev:electron": "wait-on tcp:5173 && npm run build:main && set VITE_DEV_SERVER_URL=http://localhost:5173 && electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "postinstall": "npm install --prefix renderer"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^31.0.0",
    "typescript": "^5.6.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
